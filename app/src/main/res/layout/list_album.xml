<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_shape_checked"
    android:layout_margin="8dp"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_list_album"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:civ_border_color="#0B2CE1"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_album" />


    <TextView
        android:id="@+id/textView_list_album_name"
        style="@style/Platform.MaterialComponents.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:text="album name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_list_album"
        app:layout_constraintTop_toBottomOf="@+id/imageView_list_album" />

    <TextView
        android:id="@+id/textView_list_album_artist_name"
        style="@style/Platform.MaterialComponents.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:text="artist name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView_list_album_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_list_album_name" />

    <TextView
        android:id="@+id/textView_album_music_number"
        style="@style/Platform.MaterialComponents.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:text="music number"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_list_album"
        app:layout_constraintTop_toBottomOf="@+id/textView_list_album_artist_name" />
</androidx.constraintlayout.widget.ConstraintLayout></layout>