<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PlayingMusicFragment">


    <TextView
        android:id="@+id/textView_muaic_play_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:text="tittle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_play_play_title" />

    <TextView
        android:id="@+id/textView_muaic_play_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="artist"
        app:layout_constraintStart_toStartOf="@+id/textView_muaic_play_album"
        app:layout_constraintTop_toBottomOf="@+id/textView_muaic_play_album" />

    <TextView
        android:id="@+id/textView_muaic_play_album"
        android:layout_width="59dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:text="album"
        app:layout_constraintStart_toStartOf="@+id/textView_muaic_play_title"
        app:layout_constraintTop_toBottomOf="@+id/textView_muaic_play_title" />


    <TextView
        android:id="@+id/textView_play_play_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:text="music"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton_play_fragment_shuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_shafel"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtin_play_fragment_play"
        app:layout_constraintEnd_toStartOf="@+id/imageButtin_play_fragment_play"
        app:layout_constraintTop_toTopOf="@+id/imageButtin_play_fragment_play"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButtin_play_fragment_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_on_puse"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>