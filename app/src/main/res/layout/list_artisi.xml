<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="artistVM"
            type="org.maktab.musucplayer.view_model.ArtistViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/item_shape_checked"
        android:onClick="@{()->artistVM.onClick()}"
        android:padding="8dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_play_fragment"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_color="#0B2CE1"
            app:civ_border_width="2dp"
            app:imageUrl="@{artistVM.resultImageUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_artist_artist_name"
            style="@style/Platform.MaterialComponents.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:text="@{artistVM.artistName}"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/imageView_play_fragment"
            app:layout_constraintTop_toBottomOf="@+id/imageView_play_fragment" />


        <TextView
            android:id="@+id/textView_list_artisi_number"
            style="@style/Platform.MaterialComponents.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="@{artistVM.musicNumber}"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView_artist_artist_name"
            app:layout_constraintTop_toBottomOf="@+id/textView_artist_artist_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>